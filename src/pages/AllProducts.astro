---
import { PRODUCTS } from "@/lib/products";
import Container from "@/components/Container.astro";
import Layout from "@/layouts/Layout.astro";
const { id } = Astro.props;
---

<Layout title="Productos | Accede a cada uno de los productos" description="">
  <section class="flex flex-col mt-10" id={id}>
    <Container>
      <h2 class="text-center text-6xl">Todos Nuestros Productos</h2>
      <div
        class="relative grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 content-between gap-5 place-items-center mx-auto px-10"
      >
        {
          PRODUCTS.map((product) => (
            <article class="mt-7 relative duration-500 shadow-md shadow-neutral-600 cursor-pointer group overflow-hidden h-72 w-full rounded-2xl hover:duration-700">
              <a href={`/${product.id}/`}>
                <div class="ease-in bg-gradient-to-b from-transparent to-gray-500 transition img">
                  <img
                    class="w-full h-64 transition "
                    decoding="async"
                    loading="lazy"
                    src={product.img}
                    alt={`imagen del producto - ${product.name}`}
                  />
                </div>
                <div class="absolute bg-gradient-to-t from-gray-400 to-gray-800 -bottom-[85px]  md:-bottom-[83px] lg:-bottom-[100px]  w-full p-3 flex flex-col flex-wrap gap-1 group-hover:-bottom-0 group-hover:duration-600 duration-500">
                  <div class="flex flex-row gap-6 justify-between mb-1">
                    <div class="flex flex-col">
                      <h3 class="uppercase font-extrabold text-white text-base pb-2">
                        {product.name}
                      </h3>
                      <span class="text-red-400/80 font-bold text-xs">
                        {product.materials}
                      </span>
                    </div>
                    <div class="flex flex-row justify-start items-start">
                      <span class="text-green-500 text-xs font-extrabold justify-items-end text-end">
                        $ {product.price}
                      </span>
                    </div>
                  </div>
                  <p class="text-neutral-300 text-xs">{product.description}</p>
                </div>
              </a>
            </article>
          ))
        }
      </div>
    </Container>
    <a
      class="mx-auto text-center text-base mt-10 bg-slate-600 hover:bg-yellow-200 transition hover:text-[#012029] text-white font-extrabold px-3 py-1 rounded-lg inline-block"
      href="/AllProducts">Ver Todos los Productos</a
    >
  </section>
</Layout>
<style>
  article:hover .img {
    transform: scale(1.05);
    filter: saturate(1.5);
  }
</style>
