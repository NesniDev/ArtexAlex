---
import { TESTIMONIALS } from "@/lib/testimonials.ts";
import Container from "./Container.astro";
import Comillas from "@/components/icons/others/comillas.astro";

interface Props {
  img?: string;
  name?: string;
  stars?: string;
  text?: string;
  expresion?: string;
}

const { img, name, stars, text } = Astro.props;
---

<section class="mb-20">
  <Container>
    <div class="flex flex-col mx-auto">
      <h2 class="text-4xl mb-12 text-center">
        Testimonios de nuestros clientes
      </h2>
      <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 mx-6 md:mx-auto place-self-center"
      >
        {
          TESTIMONIALS.map((item) => (
            <>
              <div class=" flex flex-row gap-5 mx-auto">
                <div class="relative flex flex-col text-white bg-gray-500 p-5 rounded-2xl hover:scale-105 transition col-span-1 sm:col-span-2 md:col-span-3">
                  <Comillas class="size-7 absolute top-2 left-2" />
                  <div class="flex flex-row gap-3">
                    <div class=" flex flex-col justify-center items-center ">
                      <img
                        class="size-16 rounded-full"
                        src={item.img}
                        alt={`imagen de ${item.name} para testimoniales`}
                      />
                      <p class="text-xs mt-2">{item.stars}</p>
                    </div>
                    <div class="flex flex-col">
                      <h3 class="text-3xl text-center mb-3">{item.name}</h3>
                      <p class="text-xs text-pretty">{item.text}</p>
                    </div>
                  </div>
                </div>
              </div>
            </>
          ))
        }
      </div>
    </div>
  </Container>
</section>
