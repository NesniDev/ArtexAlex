---
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/Icon.ico"/>
		<title>{title}</title>
	</head>
	<body class="relative">
		<div class="fixed left-0 right-0 top-0 -z-10 m-auto h-[310px] w-[310px] rounded-full bg-yellow-400 opacity-20 blur-[100px]">
		</div>
		
		<Header/>
		<slot />
	</body>
</html>
<style is:global>
	@import url('https://fonts.cdnfonts.com/css/caviar-dreams');
	:root {
		
	}
	html {
		font-family: 'Caviar Dreams', system-ui, sans-serif;
		background: #fff;
	}
	
</style>
